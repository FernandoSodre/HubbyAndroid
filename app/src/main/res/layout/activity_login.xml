<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lineargradient"
    tools:context=".views.LoginActivity">

    <TextView
        android:id="@+id/editTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="HUBby"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="73dp"
        android:layout_height="69dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toStartOf="@+id/editTitulo"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="347dp"
        android:layout_height="352dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageLogo">

        <EditText
            android:id="@+id/editEmail"
            android:layout_width="251dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="50dp"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp" />

        <EditText
            android:id="@+id/editSenha"
            android:layout_width="251dp"
            android:layout_height="48dp"
            android:layout_below="@+id/editEmail"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="50dp"
            android:hint="Senha"
            android:inputType="textPassword"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/boxManterLogado"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@+id/imageSenha"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="0dp"
            android:layout_toStartOf="@+id/textView7"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.123"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageEmail"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/editEmail"
            android:src="@drawable/email24" />

        <ImageView
            android:id="@+id/imageSenha"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="109dp"
            android:layout_marginEnd="3dp"
            android:layout_toStartOf="@+id/editSenha"
            android:src="@drawable/lock24" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editSenha"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="183dp"
            android:text="Manter Conectado" />

        <Button
            android:id="@+id/buttonLogin"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boxManterLogado"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="75dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="74dp"
            android:background="@drawable/rounded_buttonlogin"
            android:text="Entrar" />

        <TextView
            android:id="@+id/login"
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonLogin"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="66dp"
            android:text="Registrar"
            android:textColorLink="@color/colorPrimary"
            android:autoLink="web" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buttonLogin"
            android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="10dp"
            android:text="NÃ£o Possui uma Conta?" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>