<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.hubbyandroid">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HubbyAndroid"
        tools:targetApi="31">
        <activity
            android:name=".views.HistoryActivity"
            android:exported="false" />
        <activity
            android:name=".views.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".views.CreateEventActivity"
            android:exported="false" />
        <activity
            android:name=".views.MainMenuActivity"
            android:exported="false" />
        <activity
            android:name=".views.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".views.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".views.LoginActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.MainActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>